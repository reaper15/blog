<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= nav_bar :fixed => :top, :brand => "Blog", :responsive => true do %>
    <%= menu_group do %>
      <%= menu_item "Home", root_path %>
    <% end %>
      <%= menu_group :pull => :right do %>
        <% if current_user %>
          <%= menu_item "Log Out", destroy_user_session_path %>
        <% else %>
          <%= menu_item "Log in", new_user_session_path %>
        <% end %>
    <% end %>
  <% end %>

  <div class='container'>
    <div class="row">
      <div class="panel">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
